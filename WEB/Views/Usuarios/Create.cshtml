@model WEB.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="~/css/cssOpciones.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid" style="overflow: hidden;">
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <link href="~/css/font.css" rel="stylesheet" />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
                <div class="form-horizontal">
                    <center><h2>BIENVENIDO</h2></center>
                    <center><h4>CREA UN NUEVO USUARIO</h4></center>
                    <hr/>

                    @Html.ValidationSummary(true,"", new { @class = "text-danger" })
                    <div class="row">
                        @Html.LabelFor(model => model.Nombre_usuario, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="row" style="width:60%">
                            @Html.EditorFor(model => model.Nombre_usuario, new { htmlAttributes = new { @class = "form-control" , placeholder = "Ingrese un nombre"}})
                            @Html.ValidationMessageFor(model => model.Nombre_usuario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
               
                    <div class="row">
                        @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="row" style="width:60%">
                            @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" ,type="Text",placeholder="Ingrese un correo" } })
                            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
                 
                    <div class="row">
                        @Html.LabelFor(model => model.Contraseña, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="row" style="width:60%">
                            @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control", Type = "password" , placeholder = "Ingre una contraseña" } })
                            @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />
             
                    <center>
                        <div class="form-group">
                            <div class="btn">
                                <input type="submit" value="CONTINUAR" class="btn btn-default" />
                            </div>
                        </div>
                    </center>

                </div>
                }


                <div style="color:yellow">
                    <center>@Html.ActionLink("REGRESAR A INICIO", "Index")</center>
                </div>
                <div />
        <div class="footer-copyright text-center py-3">
            <div class="social-bar">
                <a href="https://www.facebook.com" class="icon icon-facebook" target="_blank"></a>
                <a href="https://twitter.com" class="icon icon-twitter" target="_blank"></a>
                <a href="https://www.youtube.com" class="icon icon-youtube" target="_blank"></a>
                <a href="https://www.instagram.com" class="icon icon-instagram" target="_blank"></a>
            </div>
            © 2021 Copyright:
            <a href="https://mdbootstrap.com/education/bootstrap/">A&C Solucion</a>
        </div>
</body>
</html>
